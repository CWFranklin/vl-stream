                #si-2.player-image
                #si-3.player-image
                #si-4.player-image
                #si-5.player-image
                #si-6.player-image
                #si-7.player-image
                #si-8.player-image
                #si-9.player-image
                #b-0.blue.ban-image(style="background-image: url('http://raw.communitydragon.org/latest/plugins/rcp-be-lol-game-data/global/default/v1/champion-tiles/523/523000.jpg');")
