                #b-2.blue.ban-image
                #b-3.red.ban-image
                #b-4.blue.ban-image
                #b-5.red.ban-image
                #b-6.blue.ban-image
                #b-7.red.ban-image
                #b-8.blue.ban-image
                #b-9.red.ban-image

